<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#6699ff">
    
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#6699ff">
          
<Button 
	android:drawableLeft="@drawable/dot"
	android:paddingLeft="10sp"
	android:orientation="horizontal"
    android:background="#6699ff"
    android:layout_width="wrap_content"
    android:layout_height="45sp"
    android:layout_marginTop="5sp"
    android:text="@string/ADDBOOKMENU"
    android:textColor="#000000"
    android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="center_vertical"
    android:id = "@+id/add_book">
    </Button>
    <Button 
	android:orientation="horizontal"
   	android:background="@drawable/button_help"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginRight="20sp"
	android:layout_gravity="right"
    android:textColor="#000000"
    android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="right"
    android:id = "@+id/help">
</Button>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
    
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:background="#6699ff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goonline" />

    </LinearLayout>
       <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:background="#6699ff">
    <ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/taptoadd"
    />
    </LinearLayout>
 </LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
   <TextView
    	android:id="@+id/point_description"
    	android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="130sp" 
        android:layout_height="wrap_content"
        android:text = "TITLE"
        android:textColor="#000000" 
        android:textSize="24sp"
  	  android:textStyle="bold"
        />
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_width="fill_parent">
    <requestFocus></requestFocus>
</EditText>
 </LinearLayout>
 
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
   <TextView
    	android:id="@+id/point_description"
    	android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="130sp" 
        android:layout_height="wrap_content"
        android:text = "AUTHOR"
        android:textColor="#000000" 
        android:textSize="24sp"
  	  android:textStyle="bold"
        />
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_width="fill_parent">
    <requestFocus></requestFocus>
</EditText>
 </LinearLayout>
 
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
   <TextView
    	android:id="@+id/point_description"
    	android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="130sp" 
        android:layout_height="wrap_content"
        android:text = "EDITION"
        android:textColor="#000000" 
        android:textSize="24sp"
  	  android:textStyle="bold"
        />
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_width="fill_parent">
    <requestFocus></requestFocus>
</EditText>
 </LinearLayout>
 
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
   <TextView
    	android:id="@+id/point_description"
    	android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="130sp" 
        android:layout_height="wrap_content"
        android:text = "ISBN"
        android:textColor="#000000" 
        android:textSize="24sp"
  	  android:textStyle="bold"
        />
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_width="fill_parent">
    <requestFocus></requestFocus>
</EditText>
 </LinearLayout>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    
    android:background="#6699ff">
   <Button
    	android:id="@+id/add"
    	android:scrollbarAlwaysDrawHorizontalTrack="true"
    	android:layout_gravity="center"
        android:layout_width="fill_parent" 
        android:layout_marginTop="15sp"
        android:layout_height="wrap_content"
        android:text = "Next"
        android:textColor="#000000" 
        android:gravity="center"
        android:textSize="24sp"
  	  android:textStyle="bold"
        />
 </LinearLayout>

</LinearLayout>
